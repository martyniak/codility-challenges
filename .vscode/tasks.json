{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/cygwin64/bin/g++.exe",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                "${fileDirname}/*.c",
                "${workspaceFolder}/.lib/*.a",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "${fileDirname}",
                "-I",
                "${workspaceFolder}/.lib/"
            ],
            "options": {
                "cwd": "C:/cygwin64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: C:/cygwin64/bin/g++.exe"
        }
    ],
    "version": "2.0.0"
}